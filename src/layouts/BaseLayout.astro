  <body class="min-h-screen flex flex-col">
    <Header />

    <main class="flex-1 pt-20">
      <slot />
    </main>

    <Footer />

    <!-- Scroll to Top Button -->
    <ScrollToTop />

    <!-- Cookie Consent Banner (LPD Suisse) -->
