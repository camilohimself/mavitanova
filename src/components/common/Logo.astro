---
interface Props {
  class?: string;
  showText?: boolean;
}

const { class: className = '', showText = true } = Astro.props;
---

<div class:list={['flex items-center gap-2', className]}>
  <!-- Logo Icon - Single line art hands -->
  <img
    src="/images/logo-icon.webp"
    alt="Ma Vita Nova"
    class="h-16 w-auto"
    width="96"
    height="96"
  />

  {showText && (
    <span class="font-heading text-xl font-medium text-text tracking-tight">
      Ma Vita Nova
    </span>
  )}
</div>
