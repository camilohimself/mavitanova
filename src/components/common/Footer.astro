---
import { siteConfig } from '../../config/site';
---

<footer class="py-16 border-t border-slate/10">
  <div class="container">
    <div class="grid md:grid-cols-3 gap-12 mb-12">
      <!-- Contact -->
      <div>
        <h4 class="font-heading font-medium mb-4">{siteConfig.contact.name}</h4>
        <p class="text-text-light text-sm leading-relaxed">
          Psychologue FSP<br />
          Consultations en ligne et en cabinet
        </p>
      </div>

      <!-- Coordonnées -->
      <div>
        <h4 class="font-heading font-medium mb-4">Contact</h4>
        <div class="space-y-2 text-sm text-text-light">
          <p>{siteConfig.contact.address.street}</p>
          <p>{siteConfig.contact.address.postalCode} {siteConfig.contact.address.city}</p>
          <p class="pt-2">
            <a href={`mailto:${siteConfig.contact.email}`} class="hover:text-secondary transition-colors">
              {siteConfig.contact.email}
            </a>
          </p>
        </div>
      </div>

      <!-- Navigation -->
      <div>
        <h4 class="font-heading font-medium mb-4">Navigation</h4>
        <nav class="space-y-2 text-sm">
          {siteConfig.navigation.map((item) => (
            <a
              href={item.href}
              class="block text-text-light hover:text-text transition-colors"
            >
              {item.name}
            </a>
          ))}
        </nav>
      </div>
    </div>

    <!-- Bottom -->
    <div class="pt-8 border-t border-slate/10 flex flex-col md:flex-row justify-between items-center gap-4 text-sm text-text-muted">
      <p>&copy; {new Date().getFullYear()} {siteConfig.name}</p>
      <div class="flex gap-6">
        <a href="/mentions-legales" class="hover:text-text transition-colors">
          Mentions légales
        </a>
        <a href="/politique-confidentialite" class="hover:text-text transition-colors">
          Confidentialité
        </a>
      </div>
    </div>
  </div>
</footer>
