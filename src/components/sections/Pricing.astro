---
import { siteConfig } from '../../config/site';
import Button from '../ui/Button.astro';

const pricingPlans = [
  {
    name: 'Consultation individuelle',
    description: 'Séance de thérapie individuelle en cabinet ou en ligne',
    price: siteConfig.pricing.individual,
    duration: '50 min',
    features: [
      'Écoute active et bienveillante',
      'Approche personnalisée',
      'Suivi entre les séances',
      'Flexibilité des horaires',
    ],
    cta: 'Réserver une séance',
    featured: false,
  },
  {
    name: 'Consultation en ligne',
    description: 'La même qualité d\'accompagnement, depuis chez vous',
    price: siteConfig.pricing.individual,
    duration: '50 min',
    features: [
      'Connexion vidéo sécurisée',
      'Pas de déplacement',
      'Confidentialité renforcée',
      'Horaires flexibles',
      'Idéal pour les expatriés',
    ],
    cta: 'Réserver en ligne',
    featured: true,
  },
  {
    name: 'Thérapie de couple',
    description: 'Accompagnement pour renforcer votre relation',
    price: siteConfig.pricing.couple,
    duration: '75 min',
    features: [
      'Espace neutre et bienveillant',
      'Communication améliorée',
      'Résolution de conflits',
      'Reconstruction du lien',
    ],
    cta: 'Réserver à deux',
    featured: false,
  },
];
---

<section class="section" id="tarifs">
  <div class="container">
    <div class="text-center max-w-3xl mx-auto mb-12">
      <span class="badge mb-4">Tarifs transparents</span>
      <h2 class="mb-4">Investissez dans votre bien-être</h2>
      <p class="text-lg text-text-light">
        Des tarifs clairs, sans surprise. Première consultation au même tarif.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8 mb-12">
      {pricingPlans.map((plan, index) => (
        <div
          class:list={[
            'relative rounded-3xl p-8 transition-all duration-300',
            plan.featured
              ? 'bg-secondary text-white shadow-2xl scale-105 z-10'
              : 'bg-white shadow-lg hover:shadow-xl',
          ]}
        >
          {plan.featured && (
            <div class="absolute -top-4 left-1/2 -translate-x-1/2">
              <span class="bg-accent text-white text-sm font-medium px-4 py-1 rounded-full">
                Recommandé
              </span>
            </div>
          )}

          <div class="text-center mb-6">
            <h3 class:list={[
              'text-xl font-heading font-medium mb-2',
              plan.featured ? 'text-white' : 'text-text',
            ]}>
              {plan.name}
            </h3>
            <p class:list={[
              'text-sm',
              plan.featured ? 'text-white/80' : 'text-text-light',
            ]}>
              {plan.description}
            </p>
          </div>

          <div class="text-center mb-6">
            <div class="flex items-baseline justify-center gap-1">
              <span class:list={[
                'text-5xl font-heading font-bold',
                plan.featured ? 'text-white' : 'text-text',
              ]}>
                {plan.price}
              </span>
              <span class:list={[
                'text-lg',
                plan.featured ? 'text-white/80' : 'text-text-light',
              ]}>
                {siteConfig.pricing.currency}
              </span>
            </div>
            <span class:list={[
              'text-sm',
              plan.featured ? 'text-white/60' : 'text-text-muted',
            ]}>
              / {plan.duration}
            </span>
          </div>

          <ul class="space-y-3 mb-8">
            {plan.features.map((feature) => (
              <li class="flex items-start gap-3">
                <svg
                  class:list={[
                    'w-5 h-5 flex-shrink-0 mt-0.5',
                    plan.featured ? 'text-white' : 'text-secondary',
                  ]}
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class:list={[
                  'text-sm',
                  plan.featured ? 'text-white/90' : 'text-text-light',
                ]}>
                  {feature}
                </span>
              </li>
            ))}
          </ul>

          <Button
            href="/contact#reservation"
            variant={plan.featured ? 'white' : 'primary'}
            class="w-full justify-center"
          >
            {plan.cta}
          </Button>
        </div>
      ))}
    </div>

    <!-- Additional info -->
    <div class="bg-bg-lavande rounded-2xl p-8 max-w-4xl mx-auto">
      <div class="grid md:grid-cols-3 gap-6 text-center">
        <div>
          <div class="w-12 h-12 mx-auto mb-3 rounded-xl bg-white flex items-center justify-center">
            <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
            </svg>
          </div>
          <h4 class="font-medium mb-1">Paiement flexible</h4>
          <p class="text-sm text-text-light">Espèces ou TWINT acceptés</p>
        </div>
        <div>
          <div class="w-12 h-12 mx-auto mb-3 rounded-xl bg-white flex items-center justify-center">
            <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h4 class="font-medium mb-1">Remboursement possible</h4>
          <p class="text-sm text-text-light">Via assurance complémentaire</p>
        </div>
        <div>
          <div class="w-12 h-12 mx-auto mb-3 rounded-xl bg-white flex items-center justify-center">
            <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h4 class="font-medium mb-1">Annulation 48h</h4>
          <p class="text-sm text-text-light">Sans frais si prévenu à temps</p>
        </div>
      </div>
    </div>
  </div>
</section>
