---
import { siteConfig } from '../../config/site';
---

<section class="hero-section min-h-screen flex items-center justify-center relative overflow-hidden">
  <!-- Background organic shape -->
  <div class="hero-bg-shape"></div>

  <div class="container relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      <!-- Content -->
      <div class="order-2 lg:order-1 text-center lg:text-left">
        <p class="text-sm text-secondary uppercase tracking-widest mb-4 hero-animate" style="--delay: 0">
          Psychologue FSP · Martigny
        </p>

        <h1 class="mb-6 hero-animate" style="--delay: 1">
          Redécouvrez<br />
          <span class="text-secondary">l'harmonie intérieure</span>
        </h1>

        <p class="text-xl text-text-light mb-10 max-w-lg leading-relaxed hero-animate" style="--delay: 2">
          Un espace d'écoute bienveillant pour cheminer
          vers votre bien-être, à votre rythme.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start hero-animate" style="--delay: 3">
          <a
            href={siteConfig.cta.primary.href}
            class="inline-block px-8 py-3 border border-secondary/30 rounded-full text-text hover:border-secondary hover:bg-secondary/5 transition-all duration-300"
          >
            Prendre rendez-vous
          </a>
          <a
            href="#journey"
            class="inline-flex items-center justify-center gap-2 text-text-light hover:text-text transition-colors"
          >
            Découvrir mon approche
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 9l-7 7-7-7"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Illustration -->
      <div class="order-1 lg:order-2 hero-animate" style="--delay: 0">
        <img
          src="/images/illustrations/hero-noeud.webp"
          alt="Accompagnement thérapeutique"
          class="w-full max-w-md mx-auto hero-illustration"
          loading="eager"
        />
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 text-text-muted hero-animate" style="--delay: 4">
    <span class="text-xs uppercase tracking-widest">Scroll</span>
    <div class="scroll-indicator">
      <div class="scroll-indicator-dot"></div>
    </div>
  </div>
</section>

<style>
  .hero-section {
    background: linear-gradient(180deg, var(--color-bg) 0%, var(--color-bg-alt) 100%);
  }

  .hero-bg-shape {
    position: absolute;
    top: -20%;
    right: -10%;
    width: 60%;
    height: 140%;
    background: radial-gradient(ellipse at center, rgba(228, 156, 149, 0.08) 0%, transparent 70%);
    pointer-events: none;
  }

  /* Hero animations */
  .hero-animate {
    opacity: 0;
    transform: translateY(30px);
    animation: heroFadeUp 0.8s ease forwards;
    animation-delay: calc(var(--delay, 0) * 0.15s);
  }

  @keyframes heroFadeUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero-illustration {
    animation: heroFloat 6s ease-in-out infinite;
  }

  @keyframes heroFloat {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-15px); }
  }

  /* Scroll indicator */
  .scroll-indicator {
    width: 24px;
    height: 40px;
    border: 2px solid var(--color-text-muted);
    border-radius: 12px;
    position: relative;
  }

  .scroll-indicator-dot {
    width: 4px;
    height: 8px;
    background: var(--color-secondary);
    border-radius: 2px;
    position: absolute;
    left: 50%;
    top: 8px;
    transform: translateX(-50%);
    animation: scrollBounce 2s ease-in-out infinite;
  }

  @keyframes scrollBounce {
    0%, 100% { top: 8px; opacity: 1; }
    50% { top: 20px; opacity: 0.5; }
  }
</style>
