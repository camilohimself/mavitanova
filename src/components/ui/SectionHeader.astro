---
interface Props {
  badge?: string;
  title: string;
  subtitle?: string;
  align?: 'left' | 'center';
  class?: string;
}

const {
  badge,
  title,
  subtitle,
  align = 'center',
  class: className = '',
} = Astro.props;

const alignClasses = {
  left: 'text-left',
  center: 'text-center mx-auto',
};
---

<div class:list={['max-w-3xl mb-12', alignClasses[align], className]}>
  {badge && (
    <span class="badge mb-4 inline-block">
      {badge}
    </span>
  )}

  <h2 class="mb-4">
    {title}
  </h2>

  {subtitle && (
    <p class="text-lg text-text-light leading-relaxed">
      {subtitle}
    </p>
  )}
</div>
