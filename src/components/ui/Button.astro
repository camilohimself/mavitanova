---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline' | 'white';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  type?: 'button' | 'submit';
  disabled?: boolean;
}

const {
  href,
  variant = 'primary',
  size = 'md',
  class: className = '',
  type = 'button',
  disabled = false,
} = Astro.props;

const Tag = href ? 'a' : 'button';

const variantClasses = {
  primary: 'btn-primary',
  secondary: 'btn-secondary',
  outline: 'btn-outline-primary',
  white: 'btn-white',
};

const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-lg',
};
---

<Tag
  href={href}
  type={!href ? type : undefined}
  disabled={disabled}
  class:list={[
    'btn',
    variantClasses[variant],
    sizeClasses[size],
    disabled && 'opacity-50 cursor-not-allowed',
    className,
  ]}
>
  <slot />
</Tag>
