<script define:vars={{ assurancesData }}>
  document.addEventListener('alpine:init', () => {
    Alpine.data('insuranceChecker', () => ({
      // State
      hasInsurance: '',
      searchQuery: '',
      showDropdown: false,
      highlightedIndex: 0,
      selectedAssurance: null,
      selectedFormuleIndex: '',
      couvertureResult: null,
      couvertureDetails: '',
      couvertureNote: '',
      needsPrescription: false,

      // Data (from Astro)
      allAssurances: assurancesData,
      filteredAssurances: assurancesData,

      // Filter assurances based on search query
      filterAssurances() {
        const query = this.searchQuery.toLowerCase().trim();
        if (!query) {
          this.filteredAssurances = this.allAssurances;
        } else {
          this.filteredAssurances = this.allAssurances.filter(a =>
            a.nom.toLowerCase().includes(query)
          );
        }
        this.highlightedIndex = 0;
        this.showDropdown = true;
      },

      // Keyboard navigation
      navigateDown() {
        if (this.highlightedIndex < this.filteredAssurances.length - 1) {
          this.highlightedIndex++;
        }
      },

      navigateUp() {
        if (this.highlightedIndex > 0) {
          this.highlightedIndex--;
        }
      },

      selectHighlighted() {
        if (this.filteredAssurances[this.highlightedIndex]) {
          this.selectAssurance(this.filteredAssurances[this.highlightedIndex]);
        }
      },

      // Select an assurance
      selectAssurance(assurance) {
        this.selectedAssurance = assurance;
        this.searchQuery = assurance.nom;
        this.showDropdown = false;
        this.selectedFormuleIndex = '';
        this.couvertureResult = null;

        // If no coverage, show result immediately
        if (assurance.aucuneCouverture) {
          this.couvertureResult = 'non-couvert';
        }
      },

      // Update coverage result when formule is selected
      updateCouverture() {
        if (!this.selectedAssurance) return;

        if (this.selectedFormuleIndex === 'autre') {
          this.couvertureResult = 'formule-inconnue';
          return;
        }

        if (this.selectedFormuleIndex === '' || this.selectedFormuleIndex === null) {
          this.couvertureResult = null;
          return;
        }

        const formule = this.selectedAssurance.formules[parseInt(this.selectedFormuleIndex)];
        if (!formule) return;

        // Format coverage details
        const { couverture, prescription, note } = formule;
        let details = '';

        if (couverture.pourcentage) {
          details = `${couverture.pourcentage}% remboursé`;
        } else if (couverture.montantFixe) {
          details = `CHF ${couverture.montantFixe} par séance`;
        }

        if (couverture.maxAnnuel) {
          const periode = couverture.periodeAns ? `${couverture.periodeAns} ans` : 'an';
          details += ` • Max. CHF ${couverture.maxAnnuel}/${periode}`;
        }

        this.couvertureDetails = details;
        this.couvertureNote = note || '';
        this.needsPrescription = prescription === 'oui';
        this.couvertureResult = 'couvert';
      },

      // Get formula name for form submission
      getFormuleName() {
        if (!this.selectedAssurance || !this.selectedFormuleIndex) return '';
        if (this.selectedFormuleIndex === 'autre') return 'Formule inconnue';
        const formule = this.selectedAssurance.formules[parseInt(this.selectedFormuleIndex)];
        return formule ? formule.nom : '';
      },

      // Reset when changing answer
      init() {
        this.$watch('hasInsurance', (value) => {
          if (value !== 'oui') {
            this.searchQuery = '';
            this.selectedAssurance = null;
            this.selectedFormuleIndex = '';
            this.couvertureResult = null;
          }
        });
      }
    }));
  });
</script>
