---
import BaseLayout from '../layouts/BaseLayout.astro';
import { siteConfig } from '../config/site';

/**
 * Page Contact - Formulaire enrichi (v2)
 * UX douce et progressive pour cabinet de psychologie
 * Basé sur les besoins de Charlotte + inspiration Aepsy
 */

// Liste des préoccupations (checkboxes)
const preoccupations = [
  { id: 'stress', label: 'Anxiété / Stress' },
  { id: 'burnout', label: 'Épuisement / Burn-out' },
  { id: 'depression', label: 'Dépression / Tristesse' },
  { id: 'estime', label: 'Estime de soi' },
  { id: 'relationnel', label: 'Difficultés relationnelles' },
  { id: 'couple', label: 'Problèmes de couple' },
  { id: 'deuil', label: 'Deuil / Séparation' },
  { id: 'travail', label: 'Difficultés professionnelles' },
  { id: 'emotions', label: 'Gestion des émotions' },
  { id: 'confiance', label: 'Confiance / Affirmation de soi' },
  { id: 'trauma', label: 'Traumatisme' },
  { id: 'sexualite', label: 'Sexualité' },
  { id: 'soutien', label: 'Besoin de soutien / d\'écoute' },
  { id: 'autre', label: 'Autre' },
];

// Fréquences de RDV
const frequences = [
  { value: '1x-semaine', label: '1 fois par semaine' },
  { value: '2x-semaine', label: 'Toutes les 2 semaines' },
  { value: '1x-mois', label: '1 fois par mois' },
  { value: 'a-definir', label: 'À définir ensemble' },
];

// Assurances complémentaires partenaires (liste non exhaustive)
const assurances = [
  'Groupe Mutuel', 'CSS', 'Helsana', 'Swica', 'Visana',
  'Sanitas', 'Concordia', 'Assura', 'Atupri', 'KPT',
  'Sympany', 'ÖKK', 'Autre'
];
---

<BaseLayout
  title="Contact"
  description="Prenez rendez-vous avec Charlotte Lagona, psychologue à Martigny. Consultations en ligne ou en cabinet."
>
  <section class="py-20 lg:py-28 relative overflow-hidden">
    <!-- Illustration décorative - Gemini fix: visible mobile en filigrane -->
    <div class="absolute pointer-events-none z-0
                bottom-0 left-1/2 -translate-x-1/2 w-48 opacity-10
                lg:top-20 lg:bottom-auto lg:right-0 lg:left-auto lg:translate-x-0 lg:w-64 lg:opacity-30">
      <img
        src="/images/illustrations/contact-ecoute.webp"
        alt=""
        class="w-full h-full object-contain"
        aria-hidden="true"
      />
    </div>

    <div class="container relative z-10">
      <div class="grid lg:grid-cols-5 gap-16 lg:gap-20">
        <!-- Formulaire (3/5) -->
        <div class="lg:col-span-3">
          <p class="text-sm text-text-muted uppercase tracking-wide mb-4">Contact</p>
          <h1 class="mb-4">Prendre rendez-vous</h1>
          <p class="text-text-light mb-10 leading-relaxed max-w-xl">
            Ce formulaire m'aide à mieux comprendre vos besoins avant notre premier échange.
            Prenez le temps de le remplir, je vous réponds sous 24-48h.
          </p>

          <form
            name="contact-v2"
            method="POST"
            data-netlify="true"
            netlify-honeypot="bot-field"
            class="space-y-10"
            x-data="{
              consultationType: '',
              paymentMethod: '',
              showAssurance: false
            }"
          >
            <input type="hidden" name="form-name" value="contact-v2" />
            <p class="hidden">
              <label>Ne pas remplir: <input name="bot-field" /></label>
            </p>

            <!-- Section 1: Informations personnelles -->
            <fieldset class="form-section">
              <legend class="form-legend">Vos coordonnées</legend>

              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="prenom" class="form-label">Prénom</label>
                  <input
                    type="text"
                    id="prenom"
                    name="prenom"
                    class="form-input"
                    required
                  />
                </div>
                <div>
                  <label for="nom" class="form-label">Nom</label>
                  <input
                    type="text"
                    id="nom"
                    name="nom"
                    class="form-input"
                    required
                  />
                </div>
              </div>

              <div class="mt-6">
                <label for="email" class="form-label">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-input"
                  required
                />
              </div>

              <div class="mt-6">
                <label for="telephone" class="form-label">
                  Téléphone <span class="text-text-muted font-normal">(optionnel)</span>
                </label>
                <input
                  type="tel"
                  id="telephone"
                  name="telephone"
                  class="form-input"
                  placeholder="+41 79 000 00 00"
                />
              </div>
            </fieldset>

            <!-- Section 2: Type de consultation -->
            <fieldset class="form-section">
              <legend class="form-legend">Type de consultation</legend>

              <div class="grid grid-cols-2 gap-4">
                <label class="radio-card">
                  <input
                    type="radio"
                    name="type-consultation"
                    value="individuelle"
                    x-model="consultationType"
                    class="sr-only"
                  />
                  <span class="radio-card-content">
                    <span class="radio-card-icon">
                      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                      </svg>
                    </span>
                    <span class="radio-card-label">Personne seule</span>
                  </span>
                </label>

                <label class="radio-card">
                  <input
                    type="radio"
                    name="type-consultation"
                    value="couple"
                    x-model="consultationType"
                    class="sr-only"
                  />
                  <span class="radio-card-content">
                    <span class="radio-card-icon">
                      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                      </svg>
                    </span>
                    <span class="radio-card-label">Couple</span>
                  </span>
                </label>
              </div>
            </fieldset>

            <!-- Section 3: Modalité -->
            <fieldset class="form-section">
              <legend class="form-legend">Modalité souhaitée</legend>

              <div class="grid grid-cols-2 gap-4">
                <label class="radio-card radio-card-sm">
                  <input
                    type="radio"
                    name="modalite"
                    value="en-ligne"
                    class="sr-only"
                  />
                  <span class="radio-card-content">
                    <span class="radio-card-icon-sm">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                      </svg>
                    </span>
                    <span class="radio-card-label">En ligne</span>
                  </span>
                </label>

                <label class="radio-card radio-card-sm">
                  <input
                    type="radio"
                    name="modalite"
                    value="cabinet"
                    class="sr-only"
                  />
                  <span class="radio-card-content">
                    <span class="radio-card-icon-sm">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                      </svg>
                    </span>
                    <span class="radio-card-label">En cabinet</span>
                  </span>
                </label>
              </div>
            </fieldset>

            <!-- Section 4: Préoccupations -->
            <fieldset class="form-section">
              <legend class="form-legend">
                Ce qui vous amène
                <span class="form-legend-hint">Sélectionnez tout ce qui vous correspond</span>
              </legend>

              <div class="checkbox-grid">
                {preoccupations.map((item) => (
                  <label class="checkbox-item">
                    <input
                      type="checkbox"
                      name="preoccupations"
                      value={item.id}
                      class="checkbox-input"
                    />
                    <span class="checkbox-label">{item.label}</span>
                  </label>
                ))}
              </div>
            </fieldset>

            <!-- Section 5: Fréquence -->
            <fieldset class="form-section">
              <legend class="form-legend">Fréquence souhaitée</legend>

              <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                {frequences.map((freq) => (
                  <label class="radio-pill">
                    <input
                      type="radio"
                      name="frequence"
                      value={freq.value}
                      class="sr-only"
                    />
                    <span class="radio-pill-label">{freq.label}</span>
                  </label>
                ))}
              </div>
            </fieldset>

            <!-- Section 6: Paiement & Assurance -->
            <fieldset class="form-section">
              <legend class="form-legend">Prise en charge</legend>

              <div class="space-y-3">
                <label class="radio-row">
                  <input
                    type="radio"
                    name="paiement"
                    value="direct"
                    x-model="paymentMethod"
                    @change="showAssurance = false"
                    class="radio-input"
                  />
                  <span class="radio-row-content">
                    <span class="radio-row-label">Je paie l'intégralité moi-même</span>
                    <span class="radio-row-hint">Cash ou TWINT à chaque séance</span>
                  </span>
                </label>

                <label class="radio-row">
                  <input
                    type="radio"
                    name="paiement"
                    value="assurance"
                    x-model="paymentMethod"
                    @change="showAssurance = true"
                    class="radio-input"
                  />
                  <span class="radio-row-content">
                    <span class="radio-row-label">Mon assurance complémentaire couvre une partie</span>
                    <span class="radio-row-hint">Vérifiez votre couverture ci-dessous</span>
                  </span>
                </label>
              </div>

              <!-- Sélection assurance (conditionnel) -->
              <div
                x-show="showAssurance"
                x-collapse
                class="mt-6 p-5 bg-bg-alt rounded-xl"
              >
                <label for="assurance" class="form-label mb-3">Votre assurance complémentaire</label>
                <select
                  id="assurance"
                  name="assurance"
                  class="form-input"
                >
                  <option value="">Sélectionnez votre assurance</option>
                  {assurances.map((ass) => (
                    <option value={ass.toLowerCase().replace(/\s/g, '-')}>{ass}</option>
                  ))}
                </select>
                <p class="text-xs text-text-muted mt-3">
                  Les consultations ne sont pas remboursées par l'assurance de base (LAMal).
                  Certaines complémentaires peuvent couvrir une partie des frais.
                  Contactez votre assurance pour connaître vos conditions.
                </p>
              </div>
            </fieldset>

            <!-- Section 7: Message -->
            <fieldset class="form-section">
              <legend class="form-legend">
                Un mot pour moi ?
                <span class="form-legend-hint">Optionnel mais utile pour préparer notre échange</span>
              </legend>

              <textarea
                id="message"
                name="message"
                rows="4"
                class="form-input resize-none"
                placeholder="Ce que vous souhaitez me partager avant notre premier échange..."
              ></textarea>
            </fieldset>

            <!-- RGPD & Submit -->
            <div class="space-y-6">
              <label class="flex items-start gap-3 cursor-pointer">
                <input
                  type="checkbox"
                  name="rgpd"
                  class="mt-1 w-4 h-4 accent-secondary"
                  required
                />
                <span class="text-sm text-text-light">
                  J'accepte que mes données soient utilisées pour traiter ma demande
                  conformément à la <a href="/politique-confidentialite" class="underline hover:text-secondary">politique de confidentialité</a>.
                </span>
              </label>

              <button
                type="submit"
                class="w-full sm:w-auto px-10 py-4 bg-secondary text-white rounded-full hover:bg-secondary/90 transition-all duration-300 font-medium"
              >
                Envoyer ma demande
              </button>
            </div>
          </form>
        </div>

        <!-- Infos (2/5) -->
        <div class="lg:col-span-2 lg:pt-16">
          <div class="lg:sticky lg:top-24 space-y-8">
            <div class="p-6 bg-bg-alt rounded-2xl">
              <h3 class="font-heading font-medium mb-4">Cabinet</h3>
              <p class="text-text-light mb-4">
                {siteConfig.contact.address.street}<br />
                {siteConfig.contact.address.postalCode} {siteConfig.contact.address.city}
              </p>
              <a
                href={`https://maps.google.com/?q=${encodeURIComponent(siteConfig.contact.address.street + ', ' + siteConfig.contact.address.city)}`}
                target="_blank"
                rel="noopener"
                class="text-sm text-secondary hover:underline"
              >
                Voir sur Google Maps &rarr;
              </a>
            </div>

            <div class="p-6 bg-bg-alt rounded-2xl">
              <h3 class="font-heading font-medium mb-4">Horaires</h3>
              <p class="text-text-light">
                Lundi - Vendredi : {siteConfig.hours.weekdays}<br />
                Samedi : {siteConfig.hours.saturday}
              </p>
            </div>

            <div class="p-6 bg-bg-alt rounded-2xl">
              <h3 class="font-heading font-medium mb-4">Email direct</h3>
              <a href={`mailto:${siteConfig.contact.email}`} class="text-secondary hover:underline break-all">
                {siteConfig.contact.email}
              </a>
            </div>

            <div class="p-5 border border-secondary/20 rounded-2xl">
              <p class="text-sm text-text-light leading-relaxed">
                <strong class="text-text">Première consultation</strong><br />
                Elle est sans engagement et nous permet de faire connaissance.
                C'est l'occasion de voir si nous pouvons travailler ensemble.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Form Sections */
  .form-section {
    border: none;
    padding: 0;
    margin: 0;
  }

  .form-legend {
    font-family: var(--font-heading);
    font-size: 1.125rem;
    font-weight: 500;
    color: var(--color-text);
    margin-bottom: 1rem;
    display: block;
  }

  .form-legend-hint {
    display: block;
    font-family: var(--font-body);
    font-size: 0.875rem;
    font-weight: 400;
    color: var(--color-text-muted);
    margin-top: 0.25rem;
  }

  .form-label {
    display: block;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }

  .form-input {
    width: 100%;
    padding: 0.875rem 1rem;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 0.75rem;
    background: white;
    font-size: 1rem;
    transition: all 0.2s ease;
  }

  .form-input:focus {
    outline: none;
    border-color: var(--color-secondary);
    box-shadow: 0 0 0 3px rgba(228, 156, 149, 0.1);
  }

  /* Radio Cards */
  .radio-card {
    cursor: pointer;
  }

  .radio-card-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    padding: 1.5rem 1rem;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 1rem;
    background: white;
    transition: all 0.2s ease;
    text-align: center;
  }

  .radio-card input:checked + .radio-card-content {
    border-color: var(--color-secondary);
    background: rgba(228, 156, 149, 0.05);
  }

  .radio-card:hover .radio-card-content {
    border-color: var(--color-secondary);
  }

  .radio-card-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    background: var(--color-bg-alt);
    border-radius: 50%;
    color: var(--color-secondary);
  }

  .radio-card-label {
    font-weight: 500;
    color: var(--color-text);
  }

  .radio-card-price {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  /* Radio Card Small */
  .radio-card-sm .radio-card-content {
    flex-direction: row;
    padding: 1rem;
    gap: 0.5rem;
  }

  .radio-card-icon-sm {
    color: var(--color-secondary);
  }

  /* Radio Pills */
  .radio-pill {
    cursor: pointer;
  }

  .radio-pill-label {
    display: block;
    padding: 0.75rem 1rem;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 999px;
    font-size: 0.875rem;
    text-align: center;
    transition: all 0.2s ease;
    background: white;
  }

  .radio-pill input:checked + .radio-pill-label {
    border-color: var(--color-secondary);
    background: var(--color-secondary);
    color: white;
  }

  .radio-pill:hover .radio-pill-label {
    border-color: var(--color-secondary);
  }

  /* Radio Rows */
  .radio-row {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    padding: 1rem;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 0.75rem;
    cursor: pointer;
    transition: all 0.2s ease;
    background: white;
  }

  .radio-row:has(input:checked) {
    border-color: var(--color-secondary);
    background: rgba(228, 156, 149, 0.05);
  }

  .radio-row:hover {
    border-color: var(--color-secondary);
  }

  .radio-input {
    margin-top: 0.25rem;
    width: 1.125rem;
    height: 1.125rem;
    accent-color: var(--color-secondary);
  }

  .radio-row-content {
    flex: 1;
  }

  .radio-row-label {
    display: block;
    font-weight: 500;
    color: var(--color-text);
  }

  .radio-row-hint {
    display: block;
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    margin-top: 0.125rem;
  }

  /* Checkbox Grid */
  .checkbox-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.5rem;
  }

  @media (min-width: 640px) {
    .checkbox-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .checkbox-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 0.875rem;
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 0.5rem;
    cursor: pointer;
    transition: all 0.2s ease;
    background: white;
  }

  .checkbox-item:has(input:checked) {
    border-color: var(--color-secondary);
    background: rgba(228, 156, 149, 0.05);
  }

  .checkbox-item:hover {
    border-color: rgba(228, 156, 149, 0.5);
  }

  .checkbox-input {
    width: 1rem;
    height: 1rem;
    accent-color: var(--color-secondary);
    flex-shrink: 0;
  }

  .checkbox-label {
    font-size: 0.8125rem;
    color: var(--color-text);
    line-height: 1.3;
  }
</style>
