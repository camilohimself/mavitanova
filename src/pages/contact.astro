---
import BaseLayout from '../layouts/BaseLayout.astro';
import { siteConfig } from '../config/site';
import { getAssurancesSorted, formatCouverture, getCouvertureLevel, type Assurance, type AssuranceFormule } from '../config/assurances';

/**
 * Page Contact - Formulaire enrichi (v3)
 * UX douce et progressive pour cabinet de psychologie
 * Basé sur les besoins de Charlotte + inspiration Aepsy
 *
 * v3: Insurance Checker hybride avec autocomplete + wizard
 */

// Liste des préoccupations (checkboxes)
const preoccupations = [
  { id: 'stress', label: 'Anxiété / Stress' },
  { id: 'burnout', label: 'Épuisement / Burn-out' },
  { id: 'depression', label: 'Dépression / Tristesse' },
  { id: 'estime', label: 'Estime de soi' },
  { id: 'relationnel', label: 'Difficultés relationnelles' },
  { id: 'couple', label: 'Problèmes de couple' },
  { id: 'deuil', label: 'Deuil / Séparation' },
  { id: 'travail', label: 'Difficultés professionnelles' },
  { id: 'emotions', label: 'Gestion des émotions' },
  { id: 'confiance', label: 'Confiance / Affirmation de soi' },
  { id: 'trauma', label: 'Traumatisme' },
  { id: 'sexualite', label: 'Sexualité' },
  { id: 'soutien', label: 'Besoin de soutien / d\'écoute' },
  { id: 'autre', label: 'Autre' },
];

// Fréquences de RDV
const frequences = [
  { value: '1x-semaine', label: '1 fois par semaine' },
  { value: '2x-semaine', label: 'Toutes les 2 semaines' },
  { value: '1x-mois', label: '1 fois par mois' },
  { value: 'a-definir', label: 'À définir ensemble' },
];

// Données assurances pour le checker (triées alphabétiquement)
const assurancesData = getAssurancesSorted();
---

<BaseLayout
  title="Contact"
  description="Prenez rendez-vous avec Charlotte Lagona, psychologue à Martigny. Consultations en ligne ou en cabinet."
>
  <section class="py-20 lg:py-28 relative overflow-hidden">
    <!-- Illustration décorative - Gemini fix: visible mobile en filigrane -->
    <div class="absolute pointer-events-none z-0
                bottom-0 left-1/2 -translate-x-1/2 w-48 opacity-10
                lg:top-20 lg:bottom-auto lg:right-0 lg:left-auto lg:translate-x-0 lg:w-64 lg:opacity-30">
      <img
        src="/images/illustrations/contact-ecoute.webp"
        alt=""
        class="w-full h-full object-contain"
        aria-hidden="true"
      />
    </div>

    <div class="container relative z-10">
      <div class="grid lg:grid-cols-5 gap-16 lg:gap-20">
        <!-- Formulaire (3/5) -->
        <div class="lg:col-span-3">
          <p class="text-sm text-text-muted uppercase tracking-wide mb-4">Contact</p>
          <h1 class="mb-4">Prendre rendez-vous</h1>
          <p class="text-text-light mb-10 leading-relaxed max-w-xl">
            Ce formulaire m'aide à mieux comprendre vos besoins avant notre premier échange.
            Prenez le temps de le remplir, je vous réponds sous 24-48h.
          </p>

          <form
            name="contact-v3"
            method="POST"
            action="/contact/success/"
            data-netlify="true"
            netlify-honeypot="bot-field"
            data-track-form="contact"
            class="space-y-10"
            x-data="insuranceChecker()"
          >
            <input type="hidden" name="form-name" value="contact-v3" />
            <p class="hidden">
              <label>Ne pas remplir: <input name="bot-field" /></label>
            </p>

            <!-- Section 1: Informations personnelles -->
            <fieldset class="form-section">
              <legend class="form-legend">Vos coordonnées</legend>

              <div class="grid md:grid-cols-2 gap-6">
                <div>
                  <label for="prenom" class="form-label">Prénom</label>
                  <input
                    type="text"
                    id="prenom"
                    name="prenom"
                    class="form-input"
                    required
                  />
                </div>
                <div>
                  <label for="nom" class="form-label">Nom</label>
                  <input
                    type="text"
                    id="nom"
                    name="nom"
                    class="form-input"
                    required
                  />
                </div>
              </div>

              <div class="mt-6">
                <label for="email" class="form-label">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-input"
                  required
                />
              </div>

              <div class="mt-6">
                <label for="telephone" class="form-label">
                  Téléphone <span class="text-text-muted font-normal">(optionnel)</span>
                </label>
                <input
                  type="tel"
                  id="telephone"
                  name="telephone"
                  class="form-input"
                  placeholder="+41 79 000 00 00"
                />
              </div>
            </fieldset>

            <!-- Section 2: Type de consultation -->
            <fieldset class="form-section">
              <legend class="form-legend">Type de consultation</legend>

              <div class="grid grid-cols-2 gap-4">
                <label class="radio-card">
                  <input
                    type="radio"
                    name="type-consultation"
                    value="individuelle"
                    x-model="consultationType"
                    class="sr-only"
                  />
                  <span class="radio-card-content">
                    <span class="radio-card-icon">
                      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                      </svg>
                    </span>
                    <span class="radio-card-label">Personne seule</span>
                  </span>
                </label>

                <label class="radio-card">
                  <input
                    type="radio"
                    name="type-consultation"
                    value="couple"
                    x-model="consultationType"
                    class="sr-only"
                  />
                  <span class="radio-card-content">
                    <span class="radio-card-icon">
                      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                      </svg>
                    </span>
                    <span class="radio-card-label">Couple</span>
                  </span>
                </label>
              </div>
            </fieldset>

            <!-- Section 3: Modalité -->
            <fieldset class="form-section">
              <legend class="form-legend">Modalité souhaitée</legend>

              <div class="grid grid-cols-2 gap-4">
                <label class="radio-card radio-card-sm">
                  <input
                    type="radio"
                    name="modalite"
                    value="en-ligne"
                    class="sr-only"
                  />
                  <span class="radio-card-content">
                    <span class="radio-card-icon-sm">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                      </svg>
                    </span>
                    <span class="radio-card-label">En ligne</span>
                  </span>
                </label>

                <label class="radio-card radio-card-sm">
                  <input
                    type="radio"
                    name="modalite"
                    value="cabinet"
                    class="sr-only"
                  />
                  <span class="radio-card-content">
                    <span class="radio-card-icon-sm">
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                      </svg>
                    </span>
                    <span class="radio-card-label">En cabinet</span>
                  </span>
                </label>
              </div>
            </fieldset>

            <!-- Section 4: Préoccupations -->
            <fieldset class="form-section">
              <legend class="form-legend">
                Ce qui vous amène
                <span class="form-legend-hint">Sélectionnez tout ce qui vous correspond</span>
              </legend>

              <div class="checkbox-grid">
                {preoccupations.map((item) => (
                  <label class="checkbox-item">
                    <input
                      type="checkbox"
                      name="preoccupations"
                      value={item.id}
                      class="checkbox-input"
                    />
                    <span class="checkbox-label">{item.label}</span>
                  </label>
                ))}
              </div>
            </fieldset>

            <!-- Section 5: Fréquence -->
            <fieldset class="form-section">
              <legend class="form-legend">Fréquence souhaitée</legend>

              <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                {frequences.map((freq) => (
                  <label class="radio-pill">
                    <input
                      type="radio"
                      name="frequence"
                      value={freq.value}
                      class="sr-only"
                    />
                    <span class="radio-pill-label">{freq.label}</span>
                  </label>
                ))}
              </div>
            </fieldset>

            <!-- Section 6: Insurance Checker (v3 hybride) -->
            <fieldset class="form-section">
              <legend class="form-legend">
                Prise en charge
                <span class="form-legend-hint">Vérifiez si votre assurance rembourse une partie des consultations</span>
              </legend>

              <!-- Question initiale: Avez-vous une complémentaire ? -->
              <div class="grid grid-cols-3 gap-3 mb-6">
                <label class="insurance-choice-card">
                  <input
                    type="radio"
                    name="has-insurance"
                    value="oui"
                    x-model="hasInsurance"
                    class="sr-only"
                  />
                  <span class="insurance-choice-content">
                    <svg class="w-5 h-5 mb-1 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                    </svg>
                    <span class="text-sm font-medium">Oui</span>
                  </span>
                </label>

                <label class="insurance-choice-card">
                  <input
                    type="radio"
                    name="has-insurance"
                    value="non"
                    x-model="hasInsurance"
                    class="sr-only"
                  />
                  <span class="insurance-choice-content">
                    <svg class="w-5 h-5 mb-1 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <span class="text-sm font-medium">Non</span>
                  </span>
                </label>

                <label class="insurance-choice-card">
                  <input
                    type="radio"
                    name="has-insurance"
                    value="unknown"
                    x-model="hasInsurance"
                    class="sr-only"
                  />
                  <span class="insurance-choice-content">
                    <svg class="w-5 h-5 mb-1 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <span class="text-sm font-medium">Je ne sais pas</span>
                  </span>
                </label>
              </div>

              <!-- Message si NON (paiement direct) -->
              <div
                x-show="hasInsurance === 'non'"
                x-collapse
                class="insurance-message insurance-message-info"
              >
                <div class="flex gap-3">
                  <div class="flex-shrink-0 w-8 h-8 bg-accent/10 rounded-full flex items-center justify-center">
                    <svg class="w-4 h-4 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                  </div>
                  <div>
                    <p class="font-medium text-text mb-1">Pas de souci !</p>
                    <p class="text-sm text-text-light">
                      Le règlement s'effectue à chaque séance par TWINT, carte ou espèces.
                      Une facture vous sera remise si besoin.
                    </p>
                  </div>
                </div>
                <input type="hidden" name="assurance" value="paiement-direct" />
              </div>

              <!-- Message si JE NE SAIS PAS -->
              <div
                x-show="hasInsurance === 'unknown'"
                x-collapse
                class="insurance-message insurance-message-help"
              >
                <div class="flex gap-3">
                  <div class="flex-shrink-0 w-8 h-8 bg-highlight/20 rounded-full flex items-center justify-center">
                    <svg class="w-4 h-4 text-highlight" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                  </div>
                  <div>
                    <p class="font-medium text-text mb-1">Nous pouvons vérifier ensemble</p>
                    <p class="text-sm text-text-light mb-2">
                      Lors de notre premier échange, nous pourrons regarder votre couverture.
                      En attendant, voici comment vérifier :
                    </p>
                    <ul class="text-xs text-text-muted space-y-1">
                      <li>1. Consultez votre police d'assurance complémentaire</li>
                      <li>2. Recherchez "psychologie" ou "médecines alternatives"</li>
                      <li>3. Ou appelez directement votre caisse maladie</li>
                    </ul>
                  </div>
                </div>
                <input type="hidden" name="assurance" value="a-verifier" />
              </div>

              <!-- Checker si OUI -->
              <div
                x-show="hasInsurance === 'oui'"
                x-collapse
                class="space-y-4"
              >
                <!-- Autocomplete Assurance -->
                <div class="relative">
                  <label for="assurance-search" class="form-label">Votre assurance</label>
                  <div class="relative">
                    <input
                      type="text"
                      id="assurance-search"
                      x-model="searchQuery"
                      @input="filterAssurances()"
                      @focus="showDropdown = true"
                      @click.away="showDropdown = false"
                      @keydown.escape="showDropdown = false"
                      @keydown.arrow-down.prevent="navigateDown()"
                      @keydown.arrow-up.prevent="navigateUp()"
                      @keydown.enter.prevent="selectHighlighted()"
                      class="form-input pr-10"
                      placeholder="Tapez le nom de votre assurance..."
                      autocomplete="off"
                    />
                    <div class="absolute right-3 top-1/2 -translate-y-1/2 pointer-events-none">
                      <svg class="w-5 h-5 text-text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                      </svg>
                    </div>
                  </div>

                  <!-- Dropdown autocomplete -->
                  <div
                    x-show="showDropdown && filteredAssurances.length > 0"
                    x-transition:enter="transition ease-out duration-100"
                    x-transition:enter-start="opacity-0 scale-95"
                    x-transition:enter-end="opacity-100 scale-100"
                    class="absolute z-20 w-full mt-1 bg-white border border-black/10 rounded-xl shadow-lg max-h-60 overflow-auto"
                  >
                    <template x-for="(ass, index) in filteredAssurances" :key="ass.id">
                      <button
                        type="button"
                        @click="selectAssurance(ass)"
                        @mouseenter="highlightedIndex = index"
                        :class="{'bg-secondary/10': highlightedIndex === index}"
                        class="w-full px-4 py-3 text-left hover:bg-secondary/5 flex items-center justify-between transition-colors"
                      >
                        <span x-text="ass.nom" class="font-medium"></span>
                        <span
                          x-show="ass.aucuneCouverture"
                          class="text-xs text-text-muted"
                        >Pas de couverture</span>
                      </button>
                    </template>
                  </div>
                </div>

                <!-- Dropdown Formule (si assurance sélectionnée avec formules) -->
                <div x-show="selectedAssurance && !selectedAssurance.aucuneCouverture && selectedAssurance.formules.length > 0" x-collapse>
                  <label for="formule" class="form-label">Votre formule</label>
                  <select
                    id="formule"
                    x-model="selectedFormuleIndex"
                    @change="updateCouverture()"
                    class="form-input"
                  >
                    <option value="">Sélectionnez votre formule</option>
                    <template x-for="(formule, index) in selectedAssurance?.formules || []" :key="index">
                      <option :value="index" x-text="formule.nom"></option>
                    </template>
                    <option value="autre">Je ne connais pas ma formule</option>
                  </select>
                </div>

                <!-- Hidden inputs pour Netlify (noms lisibles) -->
                <input type="hidden" name="assurance" :value="selectedAssurance?.nom || ''" />
                <input type="hidden" name="assurance-formule-nom" :value="getFormuleName()" />

                <!-- Résultat couverture -->
                <div x-show="couvertureResult" x-collapse>
                  <!-- Couvert -->
                  <div
                    x-show="couvertureResult === 'couvert'"
                    class="insurance-result insurance-result-success"
                  >
                    <div class="flex items-start gap-3">
                      <div class="flex-shrink-0 w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
                        <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                        </svg>
                      </div>
                      <div class="flex-1">
                        <p class="font-medium text-green-800 mb-1">Vous pouvez être remboursé(e) !</p>
                        <p x-text="couvertureDetails" class="text-sm text-green-700 mb-2"></p>
                        <p x-show="couvertureNote" x-text="couvertureNote" class="text-xs text-green-600/80"></p>
                        <p x-show="needsPrescription" class="text-xs text-amber-600 mt-2 flex items-center gap-1">
                          <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                          </svg>
                          Prescription médicale requise
                        </p>
                      </div>
                    </div>
                  </div>

                  <!-- Non couvert -->
                  <div
                    x-show="couvertureResult === 'non-couvert'"
                    class="insurance-result insurance-result-warning"
                  >
                    <div class="flex items-start gap-3">
                      <div class="flex-shrink-0 w-10 h-10 bg-amber-100 rounded-full flex items-center justify-center">
                        <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                        </svg>
                      </div>
                      <div>
                        <p class="font-medium text-amber-800 mb-1">Cette assurance ne couvre pas les consultations</p>
                        <p class="text-sm text-amber-700">
                          Le règlement s'effectuera à chaque séance (TWINT, carte ou espèces).
                          Une facture vous sera remise si besoin pour vos démarches.
                        </p>
                      </div>
                    </div>
                  </div>

                  <!-- Formule inconnue -->
                  <div
                    x-show="couvertureResult === 'formule-inconnue'"
                    class="insurance-result insurance-result-info"
                  >
                    <div class="flex items-start gap-3">
                      <div class="flex-shrink-0 w-10 h-10 bg-accent/10 rounded-full flex items-center justify-center">
                        <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                      </div>
                      <div>
                        <p class="font-medium text-text mb-1">Couverture possible</p>
                        <p class="text-sm text-text-light">
                          <span x-text="selectedAssurance?.nom"></span> propose plusieurs formules avec des couvertures variables.
                          Contactez votre assurance ou vérifiez votre police pour connaître votre formule exacte.
                        </p>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Note légale -->
                <p class="text-xs text-text-muted mt-2">
                  <strong>Note :</strong> Les consultations psychologiques ne sont pas couvertes par l'assurance de base (LAMal).
                  Seules certaines assurances complémentaires remboursent une partie des frais.
                  Les informations ci-dessus sont données à titre indicatif.
                </p>
              </div>
            </fieldset>

            <!-- Section 7: Message -->
            <fieldset class="form-section">
              <legend class="form-legend">
                Un mot pour moi ?
                <span class="form-legend-hint">Optionnel mais utile pour préparer notre échange</span>
              </legend>

              <textarea
                id="message"
                name="message"
                rows="4"
                class="form-input resize-none"
                placeholder="Ce que vous souhaitez me partager avant notre premier échange..."
              ></textarea>
            </fieldset>

            <!-- RGPD & Submit -->
            <div class="space-y-6">
              <label class="flex items-start gap-3 cursor-pointer">
                <input
                  type="checkbox"
                  name="rgpd"
                  class="mt-1 w-4 h-4 accent-secondary"
                  required
                />
                <span class="text-sm text-text-light">
                  J'accepte que mes données soient utilisées pour traiter ma demande
                  conformément à la <a href="/politique-confidentialite" class="underline hover:text-secondary">politique de confidentialité</a>.
                </span>
              </label>

              <button
                type="submit"
                class="w-full sm:w-auto px-10 py-4 bg-secondary text-white rounded-full hover:bg-secondary/90 transition-all duration-300 font-medium"
              >
                Envoyer ma demande
              </button>
            </div>
          </form>
        </div>

        <!-- Infos (2/5) -->
        <div class="lg:col-span-2 lg:pt-16">
          <div class="lg:sticky lg:top-24 space-y-8">
            <div class="p-6 bg-bg-alt rounded-2xl">
              <h3 class="font-heading font-medium mb-4">Cabinet</h3>
              <p class="text-text-light mb-4">
                {siteConfig.contact.address.street}<br />
                {siteConfig.contact.address.postalCode} {siteConfig.contact.address.city}
              </p>
              <a
                href={`https://maps.google.com/?q=${encodeURIComponent(siteConfig.contact.address.street + ', ' + siteConfig.contact.address.city)}`}
                target="_blank"
                rel="noopener"
